<header>
  <!-- Fixed navbar -->
  <nav class="navbar navbar-expand-md navbar-light fixed-top bg-white py-3">
    <div class="container-fluid">
      <a class="navbar-brand" href="<%= root_path %>">
        <%= image_tag("logo.png", height: 24, class: "d-inline-block align-text-top") %>
        <span><%= Bloak.site_name %></span>
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="navbar-nav me-auto mb-2 mb-md-0">
        </ul>

        <div class="d-flex">
          <%= form_with(url: search_path, method: :post, local: true) do |form| %>
            <div class="input-group">
              <%= form.text_field :query, class: 'form-control', placeholder: 'Search for articles...', value: @query, aria: {label: "Article title or content", describedby: "button-addon2"}, style:"min-width: 20em;" %>
              <%= button_tag class: 'btn btn-primary' do %>
                <i class="fas fa-search"></i>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </nav>
</header>