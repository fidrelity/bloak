<% content_for :title, @post.title %>

<% set_meta_tags(
  author: @post.author_name,
  description: @post.summary,
  og: {
    url: request.url,
    type: 'article',
    title: @post.title,
    description: @post.summary,
    image: @post.cover_image_url
  }
) %>

<div class="container mt-5 mb-5">

<div class="container mt-3 d-flex flex-row justify-content-around">
  <div class="mt-5 d-none d-md-block">
    <%= render 'topics' %>
  </div>
  <div class="post p-1 p-md-5 bg-white rounded-3 shadow">
    <h1 class="fs-1 fw-bold"><%= @post.title %></h1>
    <p class="fs-6 fw-light text-muted">
      Posted
      <%= friendly_date @post.created_at %>
      in
      <a href="<%= topic_path(@post.topic) %>"><%= @post.topic %></a>
    </p>
    <img src="<%= @post.cover_image_path %>" class="img-fluid" alt="">
    <p class="mt-5 fs-6 text-muted">
      <img src="<%= @post.gravatar(32) %>" alt="Author image" class="gravatar me-2"> By <%= @post.author_name %> â€¢ <%= distance_of_time_in_words @post.reading_time.seconds %> read
    </p>
    <div class="post-content mt-5">
      <%= @post.render(post: @post, request: request) %>
    </div>
  </div>
</div>
